{
    "name": "LoungeDestroyer",
    "version": "0.8.1.0",
    "manifest_version": 2,
    "description": "Improves the experience of CS:GO Lounge and DOTA2 Lounge",
    "homepage_url": "http://github.com/ncla/LoungeDestroyer",
    "icons": {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "background": {
        "scripts": [
            "lib/js/jquery-2.1.1.min.js",
            "lib/js/css-lib.js",
            "app/errorObserver.js",
            "app/helpers.js",
            "app/user.js",
            "app/match.js",
            "app/bg/bet_bg.js",
            "app/bg/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/32x32.png",
        "default_title": "LoungeDestroyer settings",
        "default_popup": "popup/popup.html"
    },
    "options_page": "settings/options.html",
    "permissions": [
        "notifications",
        "*://csgolounge.com/*",
        "*://steamcommunity.com/*",
        "*://dota2lounge.com/*",
        "http://api.ncla.me/*",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "alarms"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://csgolounge.com/*",
                "*://dota2lounge.com/*"
            ],
            "js": [
                "lib/js/jquery-2.1.1.min.js",
                "lib/js/jquery-ui-1.11.2.min.js",
                "lib/js/moment.min.js",
                "lib/js/moment-timezone-with-data.min.js",
                "app/errorObserver.js",
                "app/helpers.js",
                "app/user.js",
                "app/match.js",
                "app/items.js",
                "app/inventory.js",
                "app/inject.js",
                "app/bet.js",
                "app/queue.js",
                "app/trades.js"
            ],
            "css": [
                "app/css/inject.css"
            ],
            "run_at": "document_start"
        },
        {
        	"matches": [
        		"*://steamcommunity.com/tradeoffer/*"
        	],
        	"js": [
        		"app/steam/accept.js"
        	],
        	"css": [
        		"app/steam/steam.css"
        	]
        },
        {
            "matches": [
                "*://steamcommunity.com/market/listings/730/*"
            ],
            "js": [
                "lib/js/jquery-2.1.1.min.js",
                "app/errorObserver.js",
                "app/helpers.js",
                "app/user.js",
                "app/items.js",
                "app/pricecheck.js"
            ]
        }
    ]
}
